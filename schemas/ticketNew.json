{
   "$schema": "https://json-schema.org/draft/2019-09/schema",
   "$id": "http://example.com/example.json",
   "type": "object",
   "required": [
       "title",
       "description",
       "projectId",
       "createdBy"
   ],
   "properties": {
       "title": {
           "type": "string",
           "minLength": "1",
           "maxLength": "30"
       },
       "description": {
           "type": "string"
       },
       "projectId": {
           "type": "integer"
       },
       "createdBy": {
           "type": "integer"
       },
       "assignedTo": {
           "type": "integer",
           "default": "null"
       }
   }
}