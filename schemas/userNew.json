{
   "$schema": "https://json-schema.org/draft/2019-09/schema",
   "$id": "http://example.com/example.json",
   "type": "object",
   "required": [
       "firstName",
       "lastName",
       "email",
       "password",
       "empRole",
       "isAdmin"
   ],
   "properties": {
       "firstName": {
           "type": "string",
           "minLength": "1",
           "maxLength": "30"
       },
       "lastName": {
           "type": "string",
           "minLength": "1",
           "maxLength": "30"
       },
       "email": {
           "type": "string",
           "format": "email",
           "minLength": "5",
           "maxLength": "30"
       },
       "password": {
           "type": "string",
           "minLength": "7",
           "maxLength": "30"
       },
       "empRole": {
           "type": "string",
           "maxLength": "30"
       },
       "isAdmin": {
           "type": "boolean",
           "default": false
       }
   }
}